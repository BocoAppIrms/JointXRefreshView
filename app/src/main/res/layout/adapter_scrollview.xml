<com.handy.refreshview.XRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:xrefreshview="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/custom_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#fff"
                                    xrefreshview:autoRefresh="false">

    <com.handy.refreshview.XScrollView
        android:id="@+id/xscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </com.handy.refreshview.XScrollView>

</com.handy.refreshview.XRefreshView>